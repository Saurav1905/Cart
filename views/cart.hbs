<h1>Checkout</h1>
{{# if products }}
<div class="cart page">
    <ul class="list-group">
        {{# each products }}
        <li class="list-group-item clearfix">
            <div class="col-xs-5">
                <strong>{{ this.item.title }}</strong><br />
                <h6>{{{this.item.description}}}</h6>
            </div>
            <div class="col-xs-2 text-right">
                <span class="badge">{{ this.quantity }}</span>
            </div>
            <div class="col-xs-3 text-right">
                Rs {{ this.price }}
            </div>
            <div class="col-xs-2 text-right">
                <a href="/remove/{{this.item.id}}" class="btn btn-default"></i> Remove</a>
            </div>
        </li>
        {{/each}}
    </ul>
</div>
<div class="pay text-right">
    <strong>Total:Rs {{ totalPrice }} </strong>
</div>
<hr>
<div class="text-right">
    <a href="#" type="button" class="pay btn btn-success">PAY</a>
</div>
